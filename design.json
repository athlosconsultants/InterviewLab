{
  "designSystem": {
    "name": "InterviewLab Design System",
    "version": "2.0.0",
    "description": "Unified design system combining InterviewLab's cyan-to-blue brand with modern, minimalist UI patterns",

    "colors": {
      "primary": {
        "cyan": {
          "50": "#ecfeff",
          "500": "#06b6d4",
          "600": "#0891b2"
        },
        "blue": {
          "50": "#eff6ff",
          "500": "#3b82f6",
          "600": "#2563eb",
          "700": "#1d4ed8"
        }
      },
      "background": {
        "primary": "#ffffff",
        "secondary": "#f8fafc",
        "tertiary": "#f1f5f9",
        "card": "#ffffff",
        "cardSubtle": "#f8fafc",
        "overlay": "rgba(0, 0, 0, 0.8)"
      },
      "text": {
        "primary": "#0f172a",
        "secondary": "#475569",
        "tertiary": "#94a3b8",
        "inverse": "#ffffff",
        "muted": "#64748b"
      },
      "semantic": {
        "success": "#22c55e",
        "warning": "#eab308",
        "error": "#ef4444",
        "info": "#3b82f6"
      },
      "neutral": {
        "50": "#f8fafc",
        "100": "#f1f5f9",
        "200": "#e2e8f0",
        "300": "#cbd5e1",
        "400": "#94a3b8",
        "500": "#64748b",
        "600": "#475569",
        "700": "#334155",
        "800": "#1e293b",
        "900": "#0f172a"
      },
      "border": {
        "light": "#e2e8f0",
        "medium": "#cbd5e1",
        "dark": "#94a3b8"
      }
    },

    "gradients": {
      "primary": {
        "default": "linear-gradient(135deg, #06b6d4 0%, #2563eb 100%)",
        "hover": "linear-gradient(135deg, #0891b2 0%, #1d4ed8 100%)",
        "subtle": "linear-gradient(135deg, rgba(6, 182, 212, 0.1) 0%, rgba(37, 99, 235, 0.1) 100%)"
      },
      "destructive": {
        "default": "linear-gradient(135deg, #ef4444 0%, #dc2626 100%)",
        "hover": "linear-gradient(135deg, #dc2626 0%, #b91c1c 100%)"
      },
      "overlay": {
        "imageBottom": "linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.6) 100%)",
        "imageTop": "linear-gradient(to top, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.3) 100%)",
        "glass": "linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(255, 255, 255, 0.7) 100%)"
      }
    },

    "typography": {
      "fontFamily": {
        "system": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
        "primary": "system-ui, -apple-system, sans-serif"
      },
      "fontSize": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem",
        "5xl": "3rem",
        "6xl": "3.75rem"
      },
      "fontWeight": {
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "lineHeight": {
        "none": 1,
        "tight": 1.25,
        "snug": 1.375,
        "normal": 1.5,
        "relaxed": 1.625,
        "loose": 2
      },
      "letterSpacing": {
        "tight": "-0.5px",
        "normal": "0px",
        "wide": "0.5px"
      },
      "textStyles": {
        "display": {
          "fontSize": "3.75rem",
          "fontWeight": 700,
          "lineHeight": 1.1,
          "letterSpacing": "-0.5px"
        },
        "h1": {
          "fontSize": "3rem",
          "fontWeight": 700,
          "lineHeight": 1.2,
          "letterSpacing": "-0.5px"
        },
        "h2": {
          "fontSize": "2.25rem",
          "fontWeight": 700,
          "lineHeight": 1.3
        },
        "h3": {
          "fontSize": "1.875rem",
          "fontWeight": 600,
          "lineHeight": 1.4
        },
        "h4": {
          "fontSize": "1.5rem",
          "fontWeight": 600,
          "lineHeight": 1.4
        },
        "body": {
          "fontSize": "1rem",
          "fontWeight": 400,
          "lineHeight": 1.5
        },
        "bodyLarge": {
          "fontSize": "1.125rem",
          "fontWeight": 400,
          "lineHeight": 1.6
        },
        "caption": {
          "fontSize": "0.875rem",
          "fontWeight": 400,
          "lineHeight": 1.4
        },
        "label": {
          "fontSize": "0.875rem",
          "fontWeight": 500,
          "lineHeight": 1.3
        },
        "labelSmall": {
          "fontSize": "0.75rem",
          "fontWeight": 600,
          "lineHeight": 1.3,
          "textTransform": "uppercase",
          "letterSpacing": "0.5px"
        }
      }
    },

    "spacing": {
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem"
    },

    "borderRadius": {
      "none": "0",
      "sm": "0.125rem",
      "base": "0.25rem",
      "md": "0.375rem",
      "lg": "0.5rem",
      "xl": "0.75rem",
      "2xl": "1rem",
      "3xl": "1.5rem",
      "full": "9999px"
    },

    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "base": "0 2px 4px 0 rgba(0, 0, 0, 0.08)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1)",
      "2xl": "0 25px 50px -12px rgba(0, 0, 0, 0.25)"
    },

    "effects": {
      "blur": {
        "none": "0",
        "sm": "4px",
        "base": "8px",
        "md": "12px",
        "lg": "16px",
        "xl": "24px"
      },
      "opacity": {
        "disabled": 0.5,
        "muted": 0.6,
        "subtle": 0.8,
        "glass": 0.9
      }
    },

    "components": {
      "button": {
        "base": {
          "borderRadius": "0.5rem",
          "fontWeight": 600,
          "transition": "all 200ms ease",
          "minHeight": "44px",
          "display": "inline-flex",
          "alignItems": "center",
          "justifyContent": "center",
          "gap": "0.5rem"
        },
        "variants": {
          "default": {
            "background": "linear-gradient(135deg, #06b6d4 0%, #2563eb 100%)",
            "color": "#ffffff",
            "boxShadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
            "hover": {
              "background": "linear-gradient(135deg, #0891b2 0%, #1d4ed8 100%)",
              "boxShadow": "0 20px 25px -5px rgba(0, 0, 0, 0.1)"
            },
            "active": {
              "transform": "scale(0.98)"
            }
          },
          "outline": {
            "background": "#ffffff",
            "color": "#06b6d4",
            "border": "2px solid #06b6d4",
            "hover": {
              "background": "#ecfeff"
            }
          },
          "secondary": {
            "background": "#f1f5f9",
            "color": "#0f172a",
            "hover": {
              "background": "#e2e8f0"
            }
          },
          "ghost": {
            "background": "transparent",
            "color": "#475569",
            "hover": {
              "background": "#ecfeff",
              "color": "#06b6d4"
            }
          },
          "destructive": {
            "background": "linear-gradient(135deg, #ef4444 0%, #dc2626 100%)",
            "color": "#ffffff",
            "hover": {
              "background": "linear-gradient(135deg, #dc2626 0%, #b91c1c 100%)"
            }
          }
        },
        "sizes": {
          "sm": {
            "paddingVertical": "0.5rem",
            "paddingHorizontal": "1rem",
            "fontSize": "0.875rem",
            "minHeight": "40px"
          },
          "default": {
            "paddingVertical": "0.625rem",
            "paddingHorizontal": "1.5rem",
            "fontSize": "1rem",
            "minHeight": "44px"
          },
          "lg": {
            "paddingVertical": "0.875rem",
            "paddingHorizontal": "2rem",
            "fontSize": "1.125rem",
            "minHeight": "52px"
          },
          "icon": {
            "width": "44px",
            "height": "44px",
            "padding": "0"
          }
        }
      },

      "card": {
        "base": {
          "backgroundColor": "#ffffff",
          "borderRadius": "1rem",
          "boxShadow": "0 2px 4px 0 rgba(0, 0, 0, 0.08)",
          "overflow": "hidden"
        },
        "variants": {
          "default": {
            "padding": "1.5rem"
          },
          "elevated": {
            "padding": "1.5rem",
            "boxShadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1)"
          },
          "subtle": {
            "padding": "1.5rem",
            "backgroundColor": "#f8fafc",
            "boxShadow": "none",
            "border": "1px solid #e2e8f0"
          },
          "interactive": {
            "padding": "1.5rem",
            "cursor": "pointer",
            "transition": "all 200ms ease",
            "hover": {
              "boxShadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
              "transform": "translateY(-2px)"
            }
          }
        },
        "sizes": {
          "sm": {
            "padding": "1rem",
            "borderRadius": "0.75rem"
          },
          "default": {
            "padding": "1.5rem",
            "borderRadius": "1rem"
          },
          "lg": {
            "padding": "2rem",
            "borderRadius": "1rem"
          }
        }
      },

      "input": {
        "base": {
          "height": "44px",
          "paddingVertical": "0.625rem",
          "paddingHorizontal": "0.75rem",
          "fontSize": "1rem",
          "border": "1px solid #e2e8f0",
          "borderRadius": "0.375rem",
          "backgroundColor": "transparent",
          "color": "#0f172a",
          "boxShadow": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
          "transition": "all 200ms ease"
        },
        "states": {
          "focus": {
            "outline": "none",
            "borderColor": "#06b6d4",
            "boxShadow": "0 0 0 3px rgba(6, 182, 212, 0.1)"
          },
          "disabled": {
            "opacity": 0.5,
            "cursor": "not-allowed"
          },
          "error": {
            "borderColor": "#ef4444"
          }
        }
      },

      "badge": {
        "base": {
          "display": "inline-flex",
          "alignItems": "center",
          "borderRadius": "9999px",
          "paddingVertical": "0.25rem",
          "paddingHorizontal": "0.75rem",
          "fontSize": "0.75rem",
          "fontWeight": 600,
          "lineHeight": 1
        },
        "variants": {
          "default": {
            "backgroundColor": "#f1f5f9",
            "color": "#0f172a"
          },
          "primary": {
            "background": "linear-gradient(135deg, #06b6d4 0%, #2563eb 100%)",
            "color": "#ffffff"
          },
          "secondary": {
            "backgroundColor": "#e2e8f0",
            "color": "#475569"
          },
          "success": {
            "backgroundColor": "#dcfce7",
            "color": "#166534"
          },
          "warning": {
            "backgroundColor": "#fef3c7",
            "color": "#854d0e"
          },
          "error": {
            "backgroundColor": "#fee2e2",
            "color": "#991b1b"
          }
        }
      },

      "dialog": {
        "backdrop": {
          "backgroundColor": "rgba(0, 0, 0, 0.8)",
          "backdropFilter": "blur(4px)"
        },
        "content": {
          "backgroundColor": "#ffffff",
          "borderRadius": "1rem",
          "padding": "1.5rem",
          "maxWidth": "32rem",
          "boxShadow": "0 25px 50px -12px rgba(0, 0, 0, 0.25)"
        },
        "mobileSheet": {
          "borderRadius": "1.5rem 1.5rem 0 0",
          "maxHeight": "90vh"
        }
      },

      "avatar": {
        "sizes": {
          "sm": {
            "width": "32px",
            "height": "32px"
          },
          "default": {
            "width": "40px",
            "height": "40px"
          },
          "md": {
            "width": "48px",
            "height": "48px"
          },
          "lg": {
            "width": "64px",
            "height": "64px"
          }
        },
        "borderRadius": "9999px"
      },

      "progressRing": {
        "sizes": {
          "sm": {
            "width": "48px",
            "height": "48px",
            "strokeWidth": "4px"
          },
          "default": {
            "width": "64px",
            "height": "64px",
            "strokeWidth": "6px"
          },
          "lg": {
            "width": "96px",
            "height": "96px",
            "strokeWidth": "8px"
          }
        },
        "colors": {
          "background": "#e2e8f0",
          "foreground": "#06b6d4"
        }
      },

      "voiceOrb": {
        "sizes": {
          "sm": {
            "width": "96px",
            "height": "96px"
          },
          "default": {
            "width": "128px",
            "height": "128px"
          },
          "lg": {
            "width": "192px",
            "height": "192px"
          }
        },
        "states": {
          "idle": {
            "background": "linear-gradient(135deg, rgba(6, 182, 212, 0.2) 0%, rgba(37, 99, 235, 0.4) 100%)",
            "scale": 1
          },
          "listening": {
            "background": "linear-gradient(135deg, #3b82f6 0%, #2563eb 100%)",
            "scale": 1.1,
            "animation": "pulse"
          },
          "speaking": {
            "background": "linear-gradient(135deg, #06b6d4 0%, #0891b2 100%)",
            "scale": 1.05,
            "animation": "pulse"
          },
          "thinking": {
            "background": "linear-gradient(135deg, #94a3b8 0%, #64748b 100%)",
            "animation": "pulse-slow"
          }
        }
      }
    },

    "layout": {
      "container": {
        "maxWidth": "1280px",
        "paddingHorizontal": "1.5rem"
      },
      "section": {
        "paddingVertical": {
          "mobile": "4rem",
          "desktop": "6rem"
        }
      },
      "grid": {
        "gap": {
          "sm": "1rem",
          "default": "1.5rem",
          "lg": "2rem"
        }
      }
    },

    "animation": {
      "duration": {
        "fast": "150ms",
        "base": "200ms",
        "medium": "300ms",
        "slow": "500ms"
      },
      "easing": {
        "default": "cubic-bezier(0.4, 0, 0.2, 1)",
        "in": "cubic-bezier(0.4, 0, 1, 1)",
        "out": "cubic-bezier(0, 0, 0.2, 1)",
        "inOut": "cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "keyframes": {
        "fadeIn": {
          "from": { "opacity": 0 },
          "to": { "opacity": 1 }
        },
        "slideInFromTop": {
          "from": { "transform": "translateY(-10px)", "opacity": 0 },
          "to": { "transform": "translateY(0)", "opacity": 1 }
        },
        "pulse": {
          "0%, 100%": { "opacity": 1 },
          "50%": { "opacity": 0.7 }
        },
        "ping": {
          "75%, 100%": { "transform": "scale(1.5)", "opacity": 0 }
        }
      }
    },

    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    },

    "zIndex": {
      "base": 0,
      "dropdown": 10,
      "sticky": 20,
      "fixed": 30,
      "modalBackdrop": 40,
      "modal": 50,
      "popover": 60,
      "tooltip": 70
    },

    "accessibility": {
      "touchTarget": {
        "minHeight": "44px",
        "minWidth": "44px"
      },
      "focusRing": {
        "outline": "none",
        "boxShadow": "0 0 0 3px rgba(6, 182, 212, 0.1)"
      }
    },

    "patterns": {
      "balanceDisplay": {
        "layout": "flex-column-center",
        "gap": "0.75rem",
        "paddingVertical": "2.5rem"
      },
      "statCard": {
        "layout": "flex-column",
        "gap": "0.5rem",
        "padding": "1.5rem",
        "borderRadius": "1rem",
        "backgroundColor": "#ffffff",
        "boxShadow": "0 2px 4px 0 rgba(0, 0, 0, 0.08)"
      },
      "listItem": {
        "layout": "flex-row",
        "alignItems": "center",
        "gap": "1rem",
        "paddingVertical": "1rem",
        "paddingHorizontal": "1rem",
        "borderBottom": "1px solid #f1f5f9"
      },
      "heroSection": {
        "paddingTop": "6rem",
        "paddingBottom": "6rem",
        "textAlign": "center"
      }
    },

    "iconography": {
      "sizes": {
        "xs": "16px",
        "sm": "20px",
        "base": "24px",
        "lg": "32px",
        "xl": "40px"
      },
      "strokeWidth": "2px"
    }
  },

  "implementation": {
    "notes": [
      "All color values maintain the existing cyan-to-blue brand palette",
      "Primary gradient: cyan-500 to blue-600 (matches existing buttons)",
      "Shadows are slightly softer for a more modern feel",
      "Border radius values align with Blackbird's smoother corners (lg instead of md for most components)",
      "Spacing remains consistent with Tailwind's 4px base scale",
      "Typography uses existing system font stack",
      "Components maintain 44px minimum touch targets for mobile",
      "Focus states use cyan-500 for brand consistency",
      "All changes are purely visual/frontend - no backend changes required"
    ],
    "migration": {
      "buttons": "Update border-radius from rounded-lg (8px) - no changes needed, already aligned",
      "cards": "Keep existing rounded-xl (12px) and rounded-2xl (16px) values",
      "inputs": "Keep existing rounded-md (6px) - already optimal",
      "spacing": "Maintain existing padding/margin values - already follows best practices",
      "gradients": "Keep existing from-cyan-500 to-blue-600 - already matches design system",
      "shadows": "Existing shadow values are appropriate - no changes needed"
    },
    "recommendations": [
      "Use the defined gradient utilities consistently across all CTAs",
      "Apply card variants (default, elevated, subtle) based on hierarchy",
      "Ensure all interactive elements have hover/active states",
      "Use badge variants for status indicators and labels",
      "Apply the voiceOrb states for interview mode consistency",
      "Follow the spacing scale for consistent gaps and padding",
      "Use the defined text styles for typography hierarchy"
    ]
  }
}
